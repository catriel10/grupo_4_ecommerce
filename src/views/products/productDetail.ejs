<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include ("../partials/head") %> 

<link rel="stylesheet" href="/css/productDetail.css">

  <body>
<!-- Header -->
<%- include ("../partials/header") %> 
  
  <!-- Barra Navegacion -->
<%- include("../partials/nav") %> 
    <main>
      <section class="articulos1">
        <% productList.forEach((product) => { %>
        <article class="lv">
            <div> 
                <img class="img-cat"src="<%= product.image %>" alt="<%= product.name %>">
            </div>
            <div class="lv1">
                <i class="fas fa-truck"></i>
                    <div class="lv2">
                      <span class="price"><%= product.price %></span>
                      <span class="discount"><%= product.discount %></span>                    </div>
                <h2 class="description"><%= product.description %></h2>
            </div>
            <div class="lv3">
              <p class = "title"><%= product.name %></p>
                <div class = "product-detail">
                  <h3>Description: </h3>
                  <p>Cloth: Tissue</p>
                  <p>Size: Unique</p>
                  <p>Price: <span>$1500</span></p>
                  <ul>
                    <li>IN STOCK</li>
                  </ul>
                </div>
                <div class = "product-price">
                    
                </div>
                <div class = "container">
                  <div class = "input-container">
                    <label for ="colour">Colors:</label>
                    <select name="colour" id="colour">
                      <option value="option-1">Black</option>
                      <option value="option-2">White</option>
                      <option value="option-3">Red</option>
                      <option value="option-4">Yellow</option>
                    </select>
                  </div>
                  <div class = "input-container">
                    <label for ="quantity">Quantity:</label>
                    <input type = "number" min = "0" value = "1">
                  </div>
                  <div class = "input-container">
                    <button type = "button" class = "button">
                    Add to Cart
                    </button>
                  </div>
                </div>
        </article>
        <% }) %>
      </section> 
    </main>
 <!-- Footer -->
 <%- include ("../partials/footer") %>
  </body> 
</html>